<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
    xmlns:s="library://ns.adobe.com/flex/spark" 
    xmlns:mx="library://ns.adobe.com/flex/mx">

    <!-- Properties of the parent ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    
	<!--
	The layout property here is a property of the Group container, defined above.
	Its value is set to the VerticalLayout class which directs the Group container
	to lay out all UI children in a vertical stack.
	
	The additional horizontalAlign property directs the Group container to
	align all UI children horizontally to the center of the container.
	-->
    <s:layout>
        <s:VerticalLayout horizontalAlign="center"/>
    </s:layout>
    
    <!-- Metadata ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    
    
    
    <!-- Styles ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    
    
    
    <!-- Script ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    
    <fx:Script>
        <![CDATA[
            
            // import statements ----------------------------------------
            
            
            // variable declarations ------------------------------------
            
            [Bindable]
            public var empImage:String;
            
            [Bindable]
            public var empName:String;
            
            [Bindable]
            public var empTitle:String;
            
            // getter/setters -------------------------------------------
            
            
            // helper methods -------------------------------------------
            
            
            // event handlers -------------------------------------------
             
        ]]>
    </fx:Script>
    
    <!-- Declarations ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    
    
    
    <!-- UI components ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    
    <mx:Image source="{empImage}" />
    
    <s:Label text="{empName}" 
        fontWeight="bold" 
        textAlign="center" 
        width="120"/>
    
    <s:Label width="120" 
        text="{empTitle}"
        textAlign="center"/>
    
</s:Group>