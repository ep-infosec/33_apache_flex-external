<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" 
			   skinClass="skins.AppSkin">
	
	<!-- Exercise 1.02: Creating an application UI -->
	
	<!-- Styles ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
	
	<fx:Style source="Styles.css"/>

	<!-- Declarations ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>

	<!-- UI components ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
	
	<s:Label y="34" 
			 width="690" height="40"
			 text="Employee Portal: Vehicle Request Form"
			 styleName="titleHeader"/>
	
	<s:Form x="10" y="90">
		
		<s:FormItem label="Employee:">
			<s:DropDownList/>
		</s:FormItem>
		
		<s:FormItem label="Office Phone:">
			<s:TextInput/>
		</s:FormItem>
		
		<s:FormItem label="Mobile Phone:">
			<s:TextInput/>
		</s:FormItem>
		
		<s:FormHeading label="Dates Requested"/>
		
		<s:FormItem label="Pickup Date:">
			<mx:DateChooser/>
		</s:FormItem>
		
		<s:FormItem label="Return Date:">
			<mx:DateChooser/>
		</s:FormItem>
		
		<s:FormItem>
			<s:Button label="Submit Request"/>
		</s:FormItem>
		
	</s:Form>
	
	<s:VideoPlayer x="350" y="90" width="325" height="267" autoPlay="false"
				   source="http://adobetes.com/f45iaw100/ex1_02_video.flv"/>
	
</s:Application>
